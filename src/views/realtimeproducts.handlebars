<h1>Real Time Products</h1>
<h2>Productos actualizados en tiempo real</h2>
<div id="containerProduct" class="container d-flex">

</div>

<form>

  <div class="mb-3 row">
    <label class="col-sm-2 col-form-label">Titulo: </label>
    <div class="col-sm-10">
      <input type="text" id="title" class="form-control" placeholder="Titulo" />
    </div>
  </div>

  <div class="mb-3 row">
    <label class="col-sm-2 col-form-label">Descripcion: </label>
    <div class="col-sm-10">
      <input
        type="text"
        id="description"
        class="form-control"
        placeholder="Descripcion"
      />
    </div>
  </div>

  <div class="mb-3 row">
    <label for="inputPassword" class="col-sm-2 col-form-label">Precio: </label>
    <div class="col-sm-10">
      <input
        type="number"
        id="price"
        class="form-control"
        placeholder="Precio"
      />
    </div>
  </div>

  <div class="mb-3 row">
    <label for="inputPassword" class="col-sm-2 col-form-label">Imagen: </label>
    <div class="col-sm-10">
      <input type="text" id="img" class="form-control" placeholder="Imagen" />
    </div>
  </div>

  <div class="mb-3 row">
    <label for="inputPassword" class="col-sm-2 col-form-label">Codigo: </label>
    <div class="col-sm-10">
      <input
        type="text"
        id="codigo"
        class="form-control"
        placeholder="Codigo"
      />
    </div>
  </div>

  <div class="mb-3 row">
    <label for="inputPassword" class="col-sm-2 col-form-label">Stock: </label>
    <div class="col-sm-10">
      <input
        type="number"
        id="stock"
        class="form-control"
        placeholder="Stock"
      />
    </div>
  </div>

  <div class="mb-3 row">
    <label for="inputPassword" class="col-sm-2 col-form-label">Categoria:
    </label>
    <div class="col-sm-10">
      <input
        type="text"
        id="categoria"
        class="form-control"
        placeholder="Categoria"
      />
    </div>
  </div>

  <div class="form-floating mb-5">
    <select
      class="form-select"
      id="status"
      aria-label="Floating label select example"
    >
      <option value="true">Activo</option>
      <option value="false">Inactivo</option>
    </select>
    <label for="floatingSelect">Escoge</label>
  </div>

  <button id="btnEnviar" type="button" class="btn btn-success">Enviar</button>

</form>

<script src="https://cdn.socket.io/4.7.4/socket.io.min.js"></script>
<script src="js/main.js"></script>